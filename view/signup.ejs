<% include header.ejs %>

<div class="signup">
    <div class="container" >
        <div class="row">
            <form class="form-horizontal" role="form" method="post">
                <div class="form-group">
                    <label class="col-md-2 input-lg ">E-mail  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-envelope"></span></label>
                    <div class="col-sm-4 input-group-lg">
                        <input name="email" type="text" class="form-control" placeholder="注册邮箱用于激活" >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 input-lg ">Username  &nbsp;&nbsp; <span class="glyphicon glyphicon-user"></span></label>
                    <div class="col-sm-4 input-group-lg">
                        <input name="name" type="text" class="form-control" placeholder="用户名（英文）" >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 input-lg ">Password  &nbsp;&nbsp; <span class="glyphicon glyphicon-pencil"></span></label>
                    <div class="col-sm-4 input-group-lg">
                        <input name="password" type="password" class="form-control" placeholder="密码" >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 input-lg ">Confirm  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span class="glyphicon glyphicon-pencil"></span></label>
                    <div class="col-sm-4 input-group-lg">
                        <input name="re_password" type="password" class="form-control" placeholder="重复密码" >
                    </div>
                </div>
                <input type="submit" class="btn btn-default btn-lg" value="注册">
                <a href="/signin" type="button" class="btn btn-default btn-lg">
                    我要登陆
                </a>
            </form>
        </div>
    </div>
</div>
<% include footer.ejs %>