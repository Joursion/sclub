<div class="signin">
    <div class="container" style="margin-top: 300px">
        <form class="form-horizontal" role="form" method="post">
            <div class="form-group">
                <div class="col-md-4 input-group-lg">
                    <input name="name" type="text" class="form-control" placeholder="用户名" >
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 input-group-lg">
                    <input name="password" type="password" class="form-control" placeholder="登陆密码" >
                </div>
            </div>
            <input type="submit" class="btn btn-default btn-lg" value="登陆">
            <a href="/signup" type="button" class="btn btn-success btn-lg btn-signup">我要注册</a>
        </form>
    </div>
</div>

