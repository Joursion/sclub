<% include header.ejs %>

<div class="useINFO">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="user_info">
                    <label><%= user.name %></label>
                    <h4><%= user.reg_date %></h4>
                    <h4><%= user.last_login %></h4>
                </div>
            </div>
            <div class="col-md-4">
                <% var GoodsLength = user_goods.length ; %>
                <% if (GoodsLength == 0) { %>
                <div class="user_goods">
                    <p>该用户没有上架的闲置</p>
                </div>
                <% } else { %>
                <div class="user_goods">
                    <% user_goods.forEach(function (good) { %>
                    <h5><%= good.name %></h5>
                    <% }); %>
                </div>
                <% } %>
            </div>
            <div class="col-md-4">
                    <% var JoinLength = user_joins.length; %>
                    <% if (JoinLength == 0) { %>
                    <div class="user_join">
                        <p>该用户还没参加过任何活动</p>
                    </div>
                　　<% } else { %>
                   <div class="user_join">
                       <% user_joins.forEach(function (join) { %>
                       <h5><%= join.activity_id %></h5>
                       <% }); %>
                   </div>
                   <% } %>
            </div>
        </div>
    </div>
</div>
<% include footer.ejs%>