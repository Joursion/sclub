<% include header.ejs %>

<section class="content-wrap">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-12 main-content">
                <% jobs.forEach(function (job) { %>
                <article class="post">
                    <div class="post-title">
                        <h2><a href="/job/<%= job._id%>"><%= job.title %></a> </h2>
                    </div>
                    <div class="post-content">
                        <span><%= job.content %></span>
                    </div>
                    <div class="post-meta">
                        <p>发布于&nbsp;<%= job.create_at %></p>
                    </div>
                </article>
                <% }); %>
            </div>

            <!--右边-->
            <div class="col-md-3 col-sm-12 side_bar">

                <% if ($this.session.user) { %>
                <div class="col-md-12  col-sm-12 part">
                    <div class="part_header">
                        个人信息
                    </div>
                    <div class="part_content">
                        <img class="tx_img" src="http://www.gravatar.com/avatar/<%= $this.session.user.tx_url %>?s=30&r=30&d=retro">
                        <a href="/u/<%= $this.session.user.name %>"><span><%= $this.session.user.name %></span></a>
                    </div>
                </div>
                <% } else { %>
                <div class="col-md-12  col-sm-12 part">
                    <div class="part_header">
                        欢迎来到nbut.club
                    </div>
                    <div class="part_content">
                        您可以选择　<a href="/signin">登陆</a>或者<a href="/signup">注册</a>
                    </div>
                </div>
                <% } %>

                <div class="col-md-12  col-sm-12 part">
                    <div class="part_header">
                        热门Jobs
                    </div>
                    <div class="part_content">
                        <% Hotjobs.forEach(function(hot) { %>
                        <p><a href="/job/<%= hot._id %>"><%= hot.title %></a> </p>
                        <% }); %>
                    </div>
                </div>
                <div class="col-md-12  col-sm-12 part">
                    <div class="part_header">
                        相关
                    </div>
                    <div class="part_content">

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<% include footer.ejs %>