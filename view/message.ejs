<% include header.ejs %>


<div class="message">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <button class="btn-info" id="read_submit" onclick="has_read()"></button>
                <% var MessageLength = messages.lenth; %>
                <% if (MessageLength == 0) { %>
                <div class="myMessage">
                    您暂时没有新的消息~~~
                </div>
                <% } else { %>
                <% messages.forEach(function (message) { %>
                <div class="myMessage">
                    <p><%= message.sender %> <%= message.type%>
                        <a href="<%= message.url %>" > <%= message.content%> </a>
                        <%= message.create_at %>
                    </p>
                </div>
                <%}); %>
                <% }%>

            </div>
        </div>
    </div>
</div>

<script>
    function has_read(){
        fetch('/read_message',{
            method:'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                all: "all",
                name: "123"
            })
        }).catch(e => console.log('read_message error',e));
    }
</script>

