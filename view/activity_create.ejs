<% include header.ejs %>

<div class="container" >
    <form class="form-horizontal" role="form" method="post">
        <div class="form-group">
            <label class="col-sm-1 input-sm ">标题</label>
            <div class="col-sm-4 input-group-lg">
                <input name="title" type="text" class="form-control" >
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-1 input-sm ">活动人数</label>
            <div class="col-sm-4 input-group-lg">
                <input name="number_limit" type="text" class="form-control" placeholder="填写人数或者不限" >
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-1 input-sm ">活动时间</label>
            <div class="col-sm-4 input-group-lg">
                <input name="activity_date" type="text" class="form-control" placeholder="具体时间(YY/MM/DD/HH)或者未定" >
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-1 input-sm ">报名截止日期</label>
            <div class="col-sm-4 input-group-lg">
                <input name="deadline" type="text" class="form-control" placeholder="具体时间(YY/MM/DD/HH)或者未定" >
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 input-sm">具体内容</label>
            <textarea class="form-control" rows="20" name="content"></textarea>
        </div>
        <input type="submit" class="btn btn-default btn-lg" value="发布活动">
    </form>
</div>
<% include footer.ejs%>